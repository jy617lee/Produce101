<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.produce101ledlight.MainActivity"
    android:background="@android:color/black"
    >

    <ImageView
        android:id="@+id/ic_settings"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <RelativeLayout
        android:id="@+id/layout_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#77ffffff"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="LED color"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/color_pallete"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            />

        <RelativeLayout
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/color_pallete"
            android:background="#22000000"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Flash speed"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true">


                <RelativeLayout
                    android:id="@+id/speed_up"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_plus"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/speed_txt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:includeFontPadding="true"/>
                <RelativeLayout
                    android:id="@+id/speed_down"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_remove"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
